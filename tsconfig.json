{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "@types/*": ["types/*"],
      "@core/*": ["core/*"],
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@models/*": ["models/*"]
    },
    "typeRoots": ["node_modules/@types", "typings"],
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "strict": true,
    "strictFunctionTypes": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  },
  "include": ["src", "src/types", "src/types/hbs.d.ts"],
  "exclude": ["node_modules", "dist", ".eslintignore", ".git"]
}
