{
  "name": "middle.messenger.praktikum",
  "version": "1.0.0",
  "description": "A real-time messaging application that allows users to send and receive messages instantly. This chat app supports private and group chats, allowing users to interact with each other in a seamless and user-friendly environment. The application provides features like message notifications, media sharing, and an easy-to-navigate interface, making communication fun and efficient.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsc --noEmit && vite",
    "build": "tsc --noEmit && vite build",
    "start": "tsc --noEmit && vite build && node server.cjs",
    "preview": "vite preview",
    "lint": "eslint --fix \"./src/**/*.{js,jsx,ts,tsx,json}\"",
    "lint:css": "stylelint 'src/**/*.{pcss,css,scss}' --fix",
    "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" --ignore-path ./.prettierignore",
    "test": "mocha",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=19"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/chai": "^5.2.1",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.10",
    "@types/sinon": "^17.0.4",
    "@types/web": "^0.0.213",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "chai": "^5.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "mocha": "^11.1.0",
    "postcss": "^8.5.1",
    "postcss-cli": "^11.0.0",
    "prettier": "^2.8.8",
    "sinon": "^20.0.0",
    "stylelint": "^15.7.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-order": "^6.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.1.1",
    "vite-plugin-handlebars": "^2.0.0",
    "vite-plugin-raw": "^1.0.3"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "express": "^4.21.2",
    "handlebars": "^4.7.8",
    "postcss-preset-env": "^9.6.0"
  }
