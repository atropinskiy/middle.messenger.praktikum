.login-window {
  display: flex;
  flex-direction: column;
  width: 340px;
  height: 450px;
  padding: 50px 30px 30px;
  border-radius: 12px;
  box-shadow: 0 0 6px rgb(0 0 0 / 14%);
}

.input-block {
  padding-top: 40px;
}

.signin-login-input {
  text-align: start;
  border-bottom: 1px solid rgb(51 105 243 / 100%);
}
