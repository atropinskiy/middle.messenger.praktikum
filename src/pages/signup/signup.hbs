<div class="app">
  <div class="register-window">
    <div class="w-100 align-center">
      <h3>Регистрация</h3>
    </div>
    <div class="input-block">
      {{> Input name="email" placeholder="Почта" }}
      {{> Input name="login" placeholder="Логин" }}
      {{> Input name="first_name" placeholder="Имя" }}
      {{> Input name="second_name" placeholder="Фамилия" }}
      {{> Input name="phone" placeholder="Телефон" }}
      {{> Input name="password" placeholder="Пароль" }}
      {{> Input name="password_confirm" placeholder="Пароль (еще раз)" }}
    </div>
    <div class=" h-100 d-flex flex-column">
      <div class="w-100 mt-auto">
        {{> Button id=button.id className=button.className text=button.text}}
      </div>
      <div class="w-100 align-center mt-4">
        <a id="signInButton" href="#">Войти</a>
      </div>
    </div>
  </div>
</div>