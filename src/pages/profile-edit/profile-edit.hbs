<main>
  <div class="d-flex w-100 h-100">
    {{#if (eq openedModal 'uploadAvatar') }}
      {{{modal}}}
    {{/if}}
    {{{backDiv}}}
    <div class='d-flex flex-column w-100 justify-center valign-center'>
      <div class="d-flex justify-center">{{{avatar}}}</div>
      <div class="d-flex justify-center">Иван</div>
      <div>
        <form>
          <ul class="flex-grow editList">
            {{#each this }}
              {{#if (startsWith @key "userFields") }}
                {{{this}}}
              {{/if}}
            {{/each}}
            {{{resultButton}}}
          </ul>
          {{errors}}
        </form>
      </div>
    </div>
  </div>
</main>
