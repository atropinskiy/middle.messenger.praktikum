<main>
  <div class='d-flex h-100 w-100'>
    <div class='chats-block d-flex flex-column'>
      <div class='header w-100 d-flex justify-end'>
        <a class='profile-link' href='#profile'>Профиль ></a>
      </div>
      <div class='search-div'></div>
      <div class='chats-list-block'>
        <table class='w-100'>
          {{{chatlist}}}
        </table>
      </div>
    </div>
    <div class='w-100 d-flex flex-column h-100 flex-grow messages-block'>
      {{{chatheader}}}
      {{{chatdialog}}}
      <div class='w-100 message-field'>
        <div class='d-flex valign-center'>
          <div class='attachment-div d-flex justify-center valign-center'>
            <i class='fa-solid fa-paperclip message-attachment'></i>
          </div>
          <div class='d-flex valign-center w=100 flex-grow'>
            <input name='message' class='msg-input' type='text' placeholder='Сообщение' />
          </div>
          <div class='send-button d-flex justify-center valign-center'>
            <i class='fa-solid fa-arrow-right'></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
