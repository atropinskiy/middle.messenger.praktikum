<main>
  <div class="d-flex flex-column">
    <div class="d-flex flex-grow justify-center">{{> Avatar src=image.image_path width=image.width }}</div>
    <div class="w-100 d-flex justify-center name-label">Иван</div>
    <form action="">
      <table class="profile-table flex-grow">
        <tr>
          <td>Старый пароль</td>
          <td class="d-flex justify-end valign-center color-gray">
            {{> Input name="oldPassword" type="password" placeholder="********" className="profile-input"}}
          </td>
        </tr>
        <tr>
          <td>Новый пароль</td>
          <td class="d-flex justify-end  valign-center color-gray">
            {{> Input name="newPassword" type="password" placeholder="********" className="profile-input"}}
          </td>
        </tr>
        <tr>
          <td>Повторите новый пароль</td>
          <td class="d-flex justify-end  valign-center color-gray">
            {{> Input name="confirmPassword" type="password" placeholder="********" className="profile-input"}}
          </td>
        </tr>
      </table>
      <div class="d-flex justify-center">{{> Button id=button.id className=button.className text=button.text}}</div>
    </form>
  </div>
</main>
