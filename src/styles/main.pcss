:root {
  --primary-color: #007bff;
  --secondary-color: #2c3e50;
  --background-color: #f4f4f4;
  --text-color: #333;
  --error-color: #e74c3c;
}

html,
body {
  align-items: center;
  box-sizing: border-box;
  color: var(--text-color);
  display: flex;
  font-family: Inter, sans-serif;
  height: 100%;
  justify-content: center;
  margin: 0 auto;
  margin: 0;
  padding: 0;
  width: 100%;
}

main {
  align-items: center;
  box-sizing: border-box;
  display: flex;
  height: 100%;
  justify-content: center;
  margin: 0;
  padding: 0;
  width: 100%;
}

*,
*::before,
*::after {
  box-sizing: border-box;
}

a {
  color: var(--primary-color);
  font-size: 11px;
  font-weight: 500;
  text-decoration: none;
}

div {
  margin: 0;
  padding: 0;
}

#app {
  align-items: center;
  display: flex;
  height: 100%;
  justify-content: center;
  padding: 0;
  width: 100%;
}

h1,
h2,
h3 {
  color: var(--secondary-color);
}

h3 {
  font-size: 20px;
}

.p-0 {
  padding: 0;
}

.m-0 {
  margin: 0;
}

.ml-1 {
  margin-left: 0.5rem;
}

.ml-2 {
  margin-left: 1rem;
}

.mt-2 {
  margin-top: 1rem !important;
}

.mt-4 {
  margin-top: 1.5rem !important;
}

.w-100 {
  width: 100%;
}

.h-100 {
  height: 100%;
}

.col-3 {
  width: 25%;
}

.col-2 {
  width: 16.6%;
}

.col-9 {
  width: 75%;
}

.col-10 {
  width: 83.3%;
}

.mt-auto {
  margin-top: auto;
}

.justify-center {
  justify-content: center;
}

.justify-end {
  justify-content: end;
}

.justify-top {
  justify-content: start;
}

.valign-bottom {
  align-items: end;
}

.valign-center {
  align-items: center;
}

.valign-top {
  align-items: start;
}

.d-flex {
  display: flex;
}

.align-items-stretch {
  align-items: stretch;
}

.flex-column {
  flex-direction: column;
}

.flex-grow {
  flex-grow: 1;
}

.color-gray {
  color: rgb(153 153 153 / 100%);
}

.color-red {
  color: #e74c3c;
}

.flex-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
