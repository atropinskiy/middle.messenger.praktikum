input {
  border: none;
  border-bottom: 1px solid blue;
  height: 25px;

  &:focus-visible {
    outline: none;
  }
  
  &::placeholder {
    color: #888; 
    font-size: 13px; 
    font-weight: 500;
    font-family: 'Inter', sans-serif;
  }
}



.input_error {
  margin-left: 2px;
  margin-top: 3px;
  color: red;
  font-size: 10px;
}