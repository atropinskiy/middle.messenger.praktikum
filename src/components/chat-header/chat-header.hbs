<div class='w-100 chat-header d-flex'>
  <div>{{currentChatName}}</div>
  <div class="ml-auto">
    {{#if currentChatId }}
      {{{menuBtn}}}
    {{/if}}
    <div class="menu-wrapper {{#unless isMenuVisible}}hidden{{/unless}}">
      <ul class="menu hidden">
        {{{addUser}}}
        {{{delChat}}}
        {{{updateChatAvatar}}}
        <div class="mt-2">Удалить пользователя:</div>
        {{{userList}}}
      </ul>
    </div>
  </div>
  {{#if (eq openedModal 'addUser') }}
    {{{modalAdd}}}
  {{/if}}
  {{#if (eq openedModal 'chatAvatar') }}
    {{{modalUpload}}}
  {{/if}}
</div>
